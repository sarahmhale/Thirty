<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    >


    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <FrameLayout android:id="@+id/FrameLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/rollButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rollDice"
            android:text="Roll"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/newRoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="newRound"
            android:text="new round"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            />
    </FrameLayout>



    <FrameLayout android:id="@+id/FrameLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


            <TextView
                android:id="@+id/current_throws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Throws: 0/2"
                android:textSize="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/current_rounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rounds: 0/10"
                android:textSize="24dp"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                />



    </FrameLayout>



</LinearLayout>